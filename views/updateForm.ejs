<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include partials/head %>
</head>

<body>
  <div class="wrapper">
    <h1>
      <%= title %>
    </h1>
    <div class="form-container">
      <form action="/bookings/update/<%= booking._id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-input" id="name" name="name" value="<%= booking.name %>">
        </div>

        <div class="form-group">
          <label for="description">Description:</label>
          <input type="text" class="form-input" id="description" name="description" value="<%= booking.description %>">
        </div>

        <div class="form-group">
          <label for="hourToAttend">Time:</label>
          <select type="text" class="form-input" id="hourToAttend" name="hourToAttend" value="<%= booking.hourToAttend %>">
            <option value="morning">Morning</option>
            <option value="afternoon">Afternoon</option>
            <option value="evening">Evening</option>
          </select>
        </div>

        <div class="form-group">
          <label for="date">Date:</label>
          <input type="text" class="form-input" id="date" name="date" value="<%= booking.date %>">
        </div>
        <button type="submit" class="form-button">Update</button>
      </form>
    </div>
</body>
</div>
<% include partials/foot %>


</html>